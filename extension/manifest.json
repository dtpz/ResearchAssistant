{
  "name": "ResearchAssistant",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This should be self describatory.",
//"homepage_url": "http://google.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/bg/extension.js"],
    "persistent": true
  },
  "content_scripts":[{
        "js": ["src/contentscript.js"],
        "matches": ["http://*/*","https://*/*"]
    }],
  "options_page": "src/options_custom/index.html",
  "permissions": [
    "chrome://favicon/",
    "clipboardRead",
    "tabs",
    "http://*/*",
    "https://*/*",
    "activeTab"
  ]
}